{
  "manifest_version": 2,

  "name": "Tabigon",
  "description": "Auto closes tabs you are not using",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Click here!"
  },
  "background": {
    "persistent": false,
    "scripts": ["bundle.js"]
  },
  "permissions": [
    "activeTab",
    "tabs"
  ]
}
